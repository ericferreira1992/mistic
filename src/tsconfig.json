{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "esnext",
        "sourceMap": true,
        "baseUrl": "./",
        "outDir": "./dist/",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "filesGlob": [
      "**/*.ts",
      "!node_modules/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./src/**/*"
    ]
}