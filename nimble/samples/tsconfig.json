{
    "compilerOptions": {
        "module": "esnext",
        "target": "es5",
        "sourceMap": true,
        "baseUrl": "./src",
        "outDir": "./dist/",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": false,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*"
    ]
}